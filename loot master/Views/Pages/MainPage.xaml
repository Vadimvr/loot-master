<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="loot_master.Views.Pages.MainPage"
             xmlns:c="clr-namespace:loot_master.Views.Controls"
             BindingContext="{Binding Path=MainWindowViewModel,Source={StaticResource Locator}}"
             Title="{Binding Title}">
    <Border Stroke="red">
        <ScrollView VerticalScrollBarVisibility="Always" Padding="15,0,15,0">
            <StackLayout VerticalOptions="Fill"
                         HorizontalOptions="Fill">
                <c:GuildView />
                <c:RaidView />
            </StackLayout>
        </ScrollView>
    </Border>
</ContentPage>